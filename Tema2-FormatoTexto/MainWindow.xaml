        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="492,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Color de texto"/><LineBreak/><Run/></TextBlock>
