        <RadioButton x:Name="azulRadioButton" Content="Azul" HorizontalAlignment="Left" Margin="601,101,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rojoRadioButton" Content="Rojo" HorizontalAlignment="Left" Margin="601,121,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="verdeRadioButton" Content="Verde" HorizontalAlignment="Left" Margin="601,141,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="resultadoTextBlock" HorizontalAlignment="Left" Margin="335,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
